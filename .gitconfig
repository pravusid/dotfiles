[core]
    autocrlf = input
    excludesfile = ~/.gitignore_global
    editor = vim
    pager = delta

[commit]
    gpgsign = true

[init]
    defaultBranch = main

[merge]
    conflictstyle = zdiff3

[rebase]
    autostash = true

[pull]
    rebase = true

[interactive]
    diffFilter = delta --color-only

[delta]
    line-numbers = true
    plus-style = syntax "#012800"
    minus-style = normal "#340001"
    syntax-theme = Nord

[alias]
    a = "!git add $(git status -s | fzf -m | awk '{print $2}')"
    b = "!git checkout $(\
        _height=$(stty size | awk '{print $1}');\
        git branch | egrep -v '^\\*' | fzf --preview \"git log {1} | head -n $_height\";\
    )"
    d = "!\
        git diff --name-only |\
        fzf --header \"$(git diff --shortstat)\"\
            --preview \"git diff --color=always {1}\"\
            --preview-window=top:75%\
            --bind \"ctrl-u:preview-page-up,ctrl-d:preview-page-down\"\
    "
    l = "!\
        f() {\
            _hash=$(\
                git log --format=\"%H %ci %s%d\" |\
                fzf --no-sort |\
                head -1 |\
                cut -d \" \" -f 1\
            );\
            [[ ! -z "$_hash" ]] && git show "$_hash";\
        }; f\
    "
    gone = "!git fetch -p && git for-each-ref --format '%(refname:short) %(upstream:track)' | awk '$2 == \"[gone]\" {print $1}' | xargs -r git branch -D"
    blow = "!git restore . && git clean -fd"

[filter "lfs"]
    clean = git-lfs clean -- %f
    smudge = git-lfs smudge -- %f
    process = git-lfs filter-process
    required = true
