# https://github.com/ohmyzsh/ohmyzsh/tree/master/plugins/common-aliases

alias -g H="| head"
alias -g T="| tail"
alias -g G="| grep"
alias -g L="| less"
alias -g M="| most"
alias -g NE="2> /dev/null"

alias pg="\pgrep -fl"
alias tf="\tail -f"

alias ssa="\ss -natp"
alias ssl="\ss -nltp"

alias lgit="lazygit"

alias dk="docker"
compdef dk="docker"

alias python="python3"
alias pip="pip3"
alias venv="source .venv/bin/activate"

alias npgl="npm ls -g --depth=0"
alias npgu="npm i -g corepack@latest npm@latest pnpm@latest npm-check-updates@latest"

alias pn="pnpm"
alias pnr="pnpm run"
alias pnx="pnpm exec"
