# https://github.com/ohmyzsh/ohmyzsh/tree/master/plugins/common-aliases

alias -g H="| head"
alias -g T="| tail"
alias -g G="| grep"
alias -g L="| less"
alias -g M="| most"
alias -g NE="2> /dev/null"

alias pg="\pgrep -fl"
alias tf="\tail -f"

alias ssa="\ss -natp"
alias ssl="\ss -nltp"

alias hist="vim $HISTFILE"

alias lzg="lazygit"
alias lzd="lazydocker"

alias dk="docker"
compdef dk="docker"

alias mi="mise"
compdef mi="mise"

alias npgl="npm ls -g --depth=0"
alias npgu="npm i -g npm@latest pnpm@latest"

alias pn="pnpm"
compdef pn="pnpm"

alias skills="DISABLE_TELEMETRY=1 npx -y skills@latest"

alias python="python3"
alias pip="pip3"
alias venv="source .venv/bin/activate"

# https://docs.astral.sh/uv/concepts/tools/#the-uv-tool-interface
alias uvx="uv tool run"
compdef uvx="uv"

alias j="just"
compdef j="just"

# https://formulae.brew.sh/formula/coreutils
if [[ -n "$HOMEBREW_PREFIX" ]]; then
  alias git-quick-stats="PATH='$HOMEBREW_PREFIX/opt/coreutils/libexec/gnubin:$PATH' git-quick-stats"
fi
