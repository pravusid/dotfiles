{
  "title": "Custom Modifications",
  "rules": [
    {
      "description": "f19 Key → Hyper Key (⌃⌥⇧⌘)",
      "manipulators": [
        {
          "from": {
            "key_code": "f19"
          },
          "to": [
            {
              "key_code": "left_shift",
              "modifiers": ["left_command", "left_control", "left_option"]
            }
          ],
          "type": "basic"
        }
      ]
    },
    {
      "description": "Command-Esc → Command-Backtick",
      "manipulators": [
        {
          "from": {
            "key_code": "escape",
            "modifiers": {
              "mandatory": ["command"]
            }
          },
          "to": [
            {
              "key_code": "grave_accent_and_tilde",
              "modifiers": ["command"]
            }
          ],
          "type": "basic"
        }
      ]
    },
    {
      "description": "Change Won (₩) to grave accent (`) in Korean layout",
      "manipulators": [
        {
          "conditions": [
            {
              "type": "input_source_if",
              "input_sources": [
                {
                  "language": "ko"
                }
              ]
            }
          ],
          "type": "basic",
          "from": {
            "key_code": "grave_accent_and_tilde"
          },
          "to": [
            {
              "key_code": "grave_accent_and_tilde",
              "modifiers": ["option"]
            }
          ]
        }
      ]
    }
  ]
}
