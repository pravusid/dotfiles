export LANG="ko_KR.UTF-8"
# export LC_ALL="ko_KR.UTF-8"

OS="$(uname -s)"

# Apple x86
if [[ "$OS" == "Darwin" && $(arch) == "i386" ]]; then
  PATH="$PATH"
fi

# Apple ARM
if [[ "$OS" == "Darwin" && $(arch) == "arm64" ]]; then
  PATH="$PATH:/opt/homebrew/bin"
  eval "$(brew shellenv)"

  # https://docs.brew.sh/Shell-Completion#configuring-completions-in-zsh
  fpath+="/opt/homebrew/share/zsh/site-functions"
fi

# prepend custom completions
fpath=("$HOME/.zsh-completions" "${fpath[@]}")

export PATH="$PATH:$HOME/.local/bin"

#
# plugins
#

export plugins=(
  autoupdate
  colored-man-pages
  docker
  docker-compose
  fancy-ctrl-z
  fast-syntax-highlighting
  git
  git-trim
  starship
  zsh-autosuggestions
)

export ZSH_AUTOSUGGEST_BUFFER_MAX_SIZE="30"
export ZSH_AUTOSUGGEST_STRATEGY=(history completion)

export LG_CONFIG_FILE="$HOME/.config/lazygit/config.yml"

# https://mise.jdx.dev/ide-integration.html#vscode
# https://mise.jdx.dev/dev-tools/shims.html#how-to-add-mise-shims-to-path → mise activate will remove the shims directory from the PATH
# editor(vscode, zed) 환경은 login+interactive shell 환경에 맞춰짐, shims 삭제방지를 위해 -i flag 대신 stdin 확인; [[ $- == *i* ]], [[ -o interactive ]]
[[ -f ~/.local/bin/mise ]] && [[ -t 0 ]] && eval "$(mise activate zsh)"

# zsh-defer
source ~/.zsh-defer/zsh-defer.plugin.zsh

export FZF_BASE="$HOME/.fzf"
export FZF_DEFAULT_COMMAND="fd --type f"
zsh-defer -c '[[ -x "$(command -v fzf)" ]] && source <(fzf --zsh)'

zsh-defer -c '[[ -x "$(command -v zoxide)" ]] && eval "$(zoxide init zsh)"'

