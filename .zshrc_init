OS="$(uname -s)"

# Apple x86
if [[ "$OS" == "Darwin" && $(arch) == "i386" ]]; then
  PATH="$PATH"
fi

# Apple ARM
if [[ "$OS" == "Darwin" && $(arch) == "arm64" ]]; then
  PATH="$PATH:/opt/homebrew/bin"
  eval "$(brew shellenv)"

  fpath+="/opt/homebrew/share/zsh/site-functions"
fi

export PATH="$PATH:$HOME/.local/bin"

# starship
[ -f ~/.local/bin/starship ] && eval "$(starship init zsh)"

# mise
[ -f ~/.local/bin/mise ] && eval "$(mise activate zsh)"

# bat
export BAT_CONFIG_PATH="$HOME/.bat.conf"

# zsh-defer
source ~/.zsh-defer/zsh-defer.plugin.zsh

# fzf
export FZF_DEFAULT_COMMAND="fd --type f"
[ -f ~/.fzf.zsh ] && zsh-defer source ~/.fzf.zsh

# broot
[ -f ~/.config/broot/launcher/bash/br ] && zsh-defer source ~/.config/broot/launcher/bash/br

# extra completion
[ -f ~/.local/bin/starship ] && zsh-defer eval "$(starship completions zsh)"
[ -f ~/.local/bin/mise ] && zsh-defer eval "$(mise completion zsh)"
[ -x "$(command -v aws)" ] && zsh-defer complete -C aws_completer aws

# compinit
zsh-defer autoload -Uz compinit && compinit
